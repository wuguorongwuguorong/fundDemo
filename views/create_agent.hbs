{{#extends "base"}}

{{#block "content"}}
<h1>Create Agent</h1>

<form method="POST">
  <div>
    <label>First Name</label>
    <input type="text" name="aFirst_name" class="form-control" required />
  </div>

  <div>
    <label>Last Name</label>
    <input type="text" name="aLast_name" class="form-control" required />
  </div>

  <div>
    <label>Email</label>
    <input type="email" name="aEmail" class="form-control" required />
  </div>

  <div>
    <label>Join Date & Time</label>
    <!-- For MySQL DATETIME, use datetime-local (value like 2025-11-04T15:45) -->
    <input type="datetime-local" name="join_date" class="form-control" required />
  </div>

  <input type="submit" value="Create" class="btn btn-primary mt-3" />
</form>

{{/block}}

{{/extends}}
