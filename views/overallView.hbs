{{#block "content"}}


<h2 class="mt-3">Overview</h2>
<form id="search-form" method="GET">
    <div class="row">
        <div class="col">
            <input type="text" name="cFirst_name" class="form-control" value="{{searchTerms.cFirst_name}}" />
        </div>
        <div class="col">
            <input type="text" name="cLast_name" class="form-control" value="{{searchTerms.cLast_name}}" />
        </div>
        <input type="submit" value="Search" class="mt-3 btn-primary btn" />
        <input type="submit" value="Reset Search" id="clear-search" class="mt-3 btn-primary btn" />


    </div>
</form>
<br>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Bank</th>
        <th>Invested Amount</th>
        <th>Insertion Date</th>
        <th>Agent First Name</th>
        <th>Agent Last Name</th>



    </tr>
    {{#each allCustomers}}
    <tr>
        <td>{{this.cFirst_name}}</td>
        <td>{{this.cLast_name}}</td>
        <td>{{this.cEmail}}</td>
        <td>{{this.bank_name}}</td>
        <td>{{this.invest_amt}}</td>
        <td>{{this.pstart_date}}</td>
        <td>{{this.aFirst_name}}</td>
        <td>{{this.aLast_name}}</td>



    </tr>
    {{/each}}
</table>
{{/block}}

