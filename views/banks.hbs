{{#extends "base"}}

{{#block "content"}}
<h2 class="mt-3">Banks</h2>

<!-- Create Bank Form -->
<form method="POST" action="/banks/create" class="mb-4">
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Bank Name</label>
      <input type="text" name="bank_name" class="form-control" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">SWIFT Code</label>
      <input type="text" name="swift_code" class="form-control" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">Address 1</label>
      <input type="text" name="addr_1" class="form-control" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">Address 2</label>
      <input type="text" name="addr_2" class="form-control" required />
    </div>
    <div class="col-md-4">
      <label class="form-label">Zipcode</label>
      <input type="text" name="zipcode" class="form-control" required />
    </div>
  </div>
  <input type="submit" value="Add Bank" class="btn btn-primary mt-3" />
</form>

<!-- Banks Table -->
<table class="table">
  <thead>
    <tr>
      <th>Bank ID</th>
      <th>Bank Name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Zipcode</th>
      <th>SWIFT</th>
    </tr>
  </thead>
  <tbody>
    {{#each allBanks}}
    <tr>
      <td>{{this.bank_id}}</td>
      <td>{{this.bank_name}}</td>
      <td>{{this.addr_1}}</td>
      <td>{{this.addr_2}}</td>
      <td>{{this.zipcode}}</td>
      <td>{{this.swift_code}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/block}}

{{/extends}}
