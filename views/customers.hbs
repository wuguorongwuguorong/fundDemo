{{#extends "base"}}

{{#block "content"}}

{{#block "js"}}

{{/block}}
<h2 class="mt-3">Customers</h2>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>NRIC</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Address</th>
        <th>ZipCode</th>
        <th>Email</th>
        <th>Bank</th>
        <th>Dividends</th>
        <th>Investment Start</th>
        <th>Invested Amount</th>
    </tr>
    {{#each allCustomers}}
    <tr>
        <td>{{this.cFirst_name}}</td>
        <td>{{this.cLast_name}}</td>
        <td>{{this.dob}}</td>
        <td>{{this.NRIC}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.addr_1}}</td>
        <td>{{this.addr_2}}</td>
        <td>{{this.zipcode}}</td>
        <td>{{this.cEmail}}</td>
        <td>{{this.bank_id}}</td>
        <td>{{this.divi_id}}</td>
        <td>{{this.pstart_date}}</td>
        <td>{{this.invest_amt}}</td>
        
    </tr>
    {{/each}}
</table>
{{/block}}

{{/extends}}