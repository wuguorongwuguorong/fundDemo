{{#extends "base"}}

{{#block "content"}}
<h1>Create Customer</h1>

<form method="POST" action="/customers/create">
  <div class="mb-2">
    <label>First Name</label>
    <input type="text" name="cFirst_name" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Last Name</label>
    <input type="text" name="cLast_name" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Date Of Birth</label>
    <input type="date" name="dob" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>NRIC</label>
    <input type="text" name="NRIC" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Gender</label>
    <input type="text" name="gender" class="form-control" placeholder="M/F/O" required />
  </div>

  <div class="mb-2">
    <label>Address 1</label>
    <input type="text" name="addr_1" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Address 2</label>
    <input type="text" name="addr_2" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Zipcode</label>
    <input type="text" name="zipcode" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Email</label>
    <input type="email" name="cEmail" class="form-control" required />
  </div>

  <div class="mb-2">
    <label>Bank</label>
    <select name="bank_id" class="form-control" required>
      <option value="">-- Select a bank --</option>
      {{#each banks}}
        <option value="{{this.bank_id}}">{{this.bank_name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-2">
    <label>Bank Account Number</label>
    <input type="text" name="bank_num" class="form-control" required />
  </div>

  <input type="submit" value="Create" class="btn btn-primary mt-3" />
</form>

{{/block}}
{{/extends}}
