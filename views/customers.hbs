{{#block "content"}}


<h2 class="mt-3">All Customers</h2>
<br>
<div>

    <a href="/customers/create" class="btn btn-success">Create New Customers</a>
</div>
<br>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>NRIC</th>
        <th>Gender</th>
        <th>Address 1</th>
        <th>Address 2</th>
        <th>Zipcode</th>
        <th>Email</th>
    </tr>
    {{#each allCustomers}}
    <tr>
        <td>{{this.cFirst_name}}</td>
        <td>{{this.cLast_name}}</td>
        <td>{{this.dob}}</td>
        <td>{{this.NRIC}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.addr_1}}</td>
        <td>{{this.addr_2}}</td>
        <td>{{this.zipcode}}</td>
        <td>{{this.cEmail}}</td>
        <td>
            <a href="/customers/{{this.cust_id}}/update" class="btn btn-primary btn-sm">Edit</a>
            <a href="/customers/{{this.cust_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>


