{{#extends "base"}}

{{#block "content"}}
<h2 class="mt-3">Edit Agent</h2>

<form method="POST" action="/agents/{{agent.agent_id}}/edit" class="mb-4">
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">First Name</label>
      <input type="text" name="aFirst_name" class="form-control" value="{{agent.aFirst_name}}" required />
    </div>
    <div class="col-md-6">
      <label class="form-label">Last Name</label>
      <input type="text" name="aLast_name" class="form-control" value="{{agent.aLast_name}}" required />
    </div>
    <div class="col-md-8">
      <label class="form-label">Email</label>
      <input type="email" name="aEmail" class="form-control" value="{{agent.aEmail}}" required />
    </div>
    <div class="col-md-4">
      <label class="form-label">Join Date</label>
      <!-- Use type="date"; value requires YYYY-MM-DD -->
      <input type="date" name="join_date" class="form-control" value="{{agent.join_date_iso}}" required />
    </div>
  </div>
  <button class="btn btn-primary mt-3" type="submit">Save</button>
  <a class="btn btn-secondary mt-3" href="/agents">Cancel</a>
</form>

{{/block}}
{{/extends}}
