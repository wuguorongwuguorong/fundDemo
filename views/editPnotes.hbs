{{#extends "base"}}

{{#block "content"}}
<h1>Edit Pnotes: {{pnote.pnote_id}}</h1>
<form method="POST">
    <div>
        <label>Start Date</label>
        <input type="date" name="pstart_date" class="form-control" value="{{pnote.pstart_date}}" />
    </div>
    {{!-- <div>
        <label>End Date</label>
        <input type="date" name="pend_start" class="form-control" value="{{pnote.pend_date}}" />
    </div> --}}
    <div>
        <label>Invested Amount</label>
        <input type="text" name="invest_amt" class="form-control" value="{{pnote.invest_amt}}" />
    </div>
    <div>
        <label>Maintanence Fee</label>
        <input type="text" name="maintenance_fee" class="form-control" value="{{pnote.maintenance_fee}}" />
    </div>

    <div>
        <label for="cust_id">Customer:</label>
        <select name="cust_id" class="form-control">
            {{#each customers}}
            <option value="{{this.cust_id}}" {{#if (eq this.cust_id ../pnote.cust_id)}}selected{{/if}}>
                {{this.cFirst_name}} {{this.cLast_name}}
            </option>
            {{/each}}
        </select>
    </div>


    {{!-- <button type="submit">Create</button> --}}
    <input type="submit" value="Edit" class="btn btn-primary mt-3" />
</form>

{{/block}}

{{/extends}}