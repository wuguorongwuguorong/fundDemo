{{#extends "base"}}

{{#block "content"}}
<h2 class="mt-3">Create Pnote</h2>

<form method="POST" action="/pnotes/create" class="mb-4">
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Customer</label>
      <select name="cust_id" class="form-control" required>
        <option value="">-- Select Customer --</option>
        {{#each customers}}
          <option value="{{this.cust_id}}">{{this.full_name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="col-md-6">
      <label class="form-label">Agent</label>
      <select name="agent_id" class="form-control" required>
        <option value="">-- Select Agent --</option>
        {{#each agents}}
          <option value="{{this.agent_id}}">{{this.full_name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label">Start Date</label>
      <input type="date" name="pstart_date" class="form-control" required />
    </div>

    <div class="col-md-4">
      <label class="form-label">End Date (optional)</label>
      <input type="date" name="pend_date" class="form-control" />
    </div>

    <div class="col-md-4">
      <label class="form-label">Invested Amount</label>
      <input type="number" step="0.01" name="invest_amt" class="form-control" required />
    </div>

    <div class="col-md-4">
      <label class="form-label">Maintenance Fee</label>
      <input type="number" step="0.01" name="maintenance_fee" class="form-control" required />
    </div>
  </div>

  <button class="btn btn-primary mt-3" type="submit">Create</button>
  <a class="btn btn-secondary mt-3" href="/pnotes">Cancel</a>
</form>
{{/block}}

{{/extends}}
